# = Synopsis
#
# dh_ruby - Build system for Ruby software
#
# = Usage
#
# dh_ruby [OPTIONS]
#
# -h, --help:
#   show help

require 'gem2deb'
require 'gem2deb/dhruby'
include Gem2Deb

require 'getoptlong'
require 'rdoc/usage'

opts = GetoptLong.new(
  [ '--version', '-v', GetoptLong::NO_ARGUMENT ],
  [ '--help', '-h', GetoptLong::NO_ARGUMENT ],
  [ '--clean', GetoptLong::NO_ARGUMENT],
  [ '--configure', GetoptLong::NO_ARGUMENT],
  [ '--build', GetoptLong::NO_ARGUMENT],
  [ '--test', GetoptLong::NO_ARGUMENT],
  [ '--install', GetoptLong::NO_ARGUMENT]
)

opts.each do |opt,arg|
  case opt
    when '--help'
      RDoc::usage(0, 'usage')
    when '--version'
      puts "dh_ruby version #{Gem2Deb::VERSION}"
      exit(0)
    when '--clean'
      DhRuby::new.clean
      exit(0)
    when '--configure'
      DhRuby::new.configure
      exit(0)
    when '--build'
      DhRuby::new.build
      exit(0)
    when '--test'
      DhRuby::new.test
      exit(0)
    when '--install'
      DhRuby::new.install
      exit(0)
  end
end

RDoc::usage(0, 'usage')
exit(1)

__END__
=head1 NAME

dh_ruby - build system for Ruby software

=head1 USAGE

dh_ruby [OPTIONS]

=head1 DESCRIPTION

B<dh_ruby> is a Debhelper 7 build system for Ruby software.

See dh_ruby --help for details.

=back

